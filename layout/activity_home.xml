<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <TextView
        android:id="@+id/text_view_numbers"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:background="@color/numbers_background"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/spacing_16dp"
        android:text="@string/numbers"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_family_members"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@color/family_members_background"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/spacing_16dp"
        android:text="@string/family_members"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_numbers" />

    <TextView
        android:id="@+id/text_view_colors"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@color/colors_background"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/spacing_16dp"
        android:text="@string/colors"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_family_members" />

    <TextView
        android:id="@+id/text_view_phrases"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@color/phrases_background"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/spacing_16dp"
        android:text="@string/phrases"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_colors" />

</androidx.constraintlayout.widget.ConstraintLayout>